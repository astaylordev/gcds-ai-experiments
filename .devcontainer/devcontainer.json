{
  "name": "GCDS AI Experiments",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.12"
    }
  },
  "postCreateCommand": "npm install && python -m venv backend/.venv && backend/.venv/bin/pip install -r backend/requirements.txt",
  "forwardPorts": [5173, 8000],
  "portsAttributes": {
    "5173": { "label": "Vite Dev Server" },
    "8000": { "label": "FastAPI Backend" }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode"
      ]
    }
  }
}
